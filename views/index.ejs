<html>

<head>
    <title>
        <%= title %>
    </title>
</head>

<body>
    <ul>
        <% for (let i=0; i < messages.length; i++) { %>
            <li>
                <h2>
                    <%= messages[i].user %>
                </h2>
                <p>
                    <%= messages[i].text %>
                </p>
                <small>
                    <%= messages[i].added %>
                </small>
                <a href="/message/<%= i %>">Open</a>
            </li>
            <% } %>
    </ul>

    <p><a href="/new"><button>a New Message</button></a></p>
</body>

</html>